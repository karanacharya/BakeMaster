<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:elevation="5dp"
    android:backgroundTint="@color/white"
    android:id="@+id/main_card_view"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recipe_image_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/recipeNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:text="Nutella Pie"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/appColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/allerta" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/baseline_arrow_forward_ios_black_18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recipe_servings_text"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:textColor="@color/appColor"
            android:textStyle="bold|italic"
            android:textSize="15sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>